<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:clickable="false">

        <TextView
                android:id="@+id/task_time"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="4dp"
                android:clickable="false"
                android:textColor="@color/text"
                android:textSize="25sp"
                android:text="21:00"
                android:background="@drawable/button_rect_list_normal"/>

        <TextView
                android:id="@+id/task_date"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="4dp"
                android:clickable="false"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:text="23 сентября"/>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:clickable="false">

        <TextView
                android:id="@+id/task_title"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="4dp"
                android:clickable="false"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:text="Встреча с Игорем в 22:00"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/task_title"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:clickable="false"
                android:background="@color/dividers"/>

        <TextView
                android:id="@+id/task_description"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/task_title"
                android:clickable="false"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="@color/secondary"
                android:text="Что то пишу, какой то текст, в виде описания таска, или допольнительной информации"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom">

        <TextView
                android:id="@+id/task_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1000"
                android:gravity="end"
                android:padding="5dp"
                android:textSize="10sp"
                android:textColor="#FF27A223"
                android:text="В ПРОЦЕСCЕ"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>